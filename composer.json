{
    "name": "axy/arr-helpers",
    "type": "library",
    "description": "Some array helpers",
    "keywords": ["array", "iterator", "traversable", "helper"],
    "homepage": "https://github.com/axypro/arr-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Grigoriev",
            "email": "go.vasac@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "12.2.7",
        "squizlabs/php_codesniffer": "=3.7.2"
    },
    "autoload": {
        "psr-4": {
            "axy\\arr\\helpers\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "axy\\arr\\helpers\\tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/tests/*",
            "/devops/*",
            "/doc/*",
            "/*.sh",
            "/*.xml.dist",
            "/CHANGELOG.md"
        ]
    }
}
